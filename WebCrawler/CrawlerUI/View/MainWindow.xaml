<Window x:Class="CrawlerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrawlerUI"
        xmlns:ViewModelNamespace="clr-namespace:CrawlerUI.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <ViewModelNamespace:CrawlerViewModel x:Key="CrawlerViewModel"/>
        <local:TreeViewConverter x:Key="TreeViewConverter"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource CrawlerViewModel}" Name="MainGrid" Background="#FF131313">
        <TreeView ItemsSource="{Binding CrawlResult, Converter={StaticResource TreeViewConverter}}" x:Name="treeView"   HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Background="#00000000" FontFamily="Consolas" Margin="0,0,0,66"/>
        <Button Command="{Binding AsyncCrawlingCommand}" Content="Run" Margin="201,275,212,10"/>
    </Grid>
</Window>
